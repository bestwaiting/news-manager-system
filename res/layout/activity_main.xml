<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
	<FrameLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	    
	    <ImageView 
	        android:id="@+id/iv_title_bar"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:scaleType="fitXY"
	        android:src="@drawable/title_bar"
	        />
	    <TextView 
	        android:id="@+id/txt_title_text"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	        android:text="@string/title_text"
	        android:textColor="#ffffff"
	        android:textSize="24sp"
	        />
	</FrameLayout>
	<HorizontalScrollView 
	    android:id="@+id/hsv_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:scrollbars="none"
	    >
	    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
		    <FrameLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        >
		        <GridView 
		            android:id="@+id/gv_scroll_text"
		            android:layout_width="1000px"
		            android:layout_height="72px"
		            android:gravity="center"
		            android:background="#F3F3F3"
		            android:columnWidth="150px"
		            android:numColumns="auto_fit"
		            android:stretchMode="none"
		            android:listSelector="@drawable/selector_gridview_background"
		            >	            
		        </GridView>
		        <ImageView 
		            android:id="@+id/iv_scroll_bar"
		            android:layout_width="150px"
		            android:layout_height="8px"
		            android:layout_gravity="bottom"
		            android:paddingLeft="25px"
		            android:layout_marginRight="25px"
		            android:scaleType="fitXY"
		            android:src="@drawable/scroll_bar_selected"/>
		    </FrameLayout>
		    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:scaleType="fitXY"
            android:src="@drawable/title_line" />
	    </LinearLayout>
	</HorizontalScrollView>
	<android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:background="#EFEFEF"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" >
    </android.support.v4.view.ViewPager>
</LinearLayout>
